<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditOrderActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/lavender"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Edit Order"
        app:contentInsetStartWithNavigation="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="0dp" />

    <RelativeLayout
        android:id="@+id/RLEditOrder"
        android:layout_width="358dp"
        android:layout_height="347dp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.554">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="39dp"
            android:layout_marginTop="32dp"
            android:text="Order ID:"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvOrderID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="33dp"
            android:layout_toEndOf="@+id/textView4"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOrderID"
            android:layout_alignParentStart="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="16dp"
            android:text="Status: "
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spOrderStatus"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOrderID"
            android:layout_marginStart="15dp"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/textView" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="26dp"
            android:text="Service Type:"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/ETOrderService"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spOrderStatus"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/textView2"
            android:hint="Ordered Service"
            android:text="Service Type" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ETOrderService"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="18dp"
            android:text="Employee:"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/ETOrderEmpName"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ETOrderService"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/textView3"
            android:hint="Employee Name"
            android:text="Employee In Charge" />

        <Button
            android:id="@+id/btnOrderDelete"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ETOrderEmpName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/red"
            android:text="Delete" />

        <Button
            android:id="@+id/btnOrderEdit"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ETOrderEmpName"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="10dp"

            android:backgroundTint="@color/bluegreen"
            android:text="Edit" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
